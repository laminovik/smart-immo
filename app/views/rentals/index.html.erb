<p id="notice"><%= notice %></p>

<div class="container">

<h1><%= Rental.count %> annonces de location</h1>

  <table class="table table-striped text-center">
    <thead>
      <tr class="text-center">
        <th>Ville</th>
        <th>Quartier</th>
        <th>Type du bien</th>
        <th>Loyer</th>
        <th>Surface</th>
        <!-- <th>Prix du m</th> -->
        <th>Nombre pièces</th>
        <th>Nombre de SdB</th>
        <th>Lien vers l'annonce</th>
        <th>Publiée le</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @rentals.each do |rental| %>
        <tr>
          <td><%= rental.city.name %></td>
          <td><%= rental.district.name %></td>
          <td><%= rental.type.name %></td>
          <td><%= rental.price %></td>
          <td><%= rental.surface %></td>
          <!-- <td><%= rental.sqm_price %></td> -->
          <td><%= rental.rooms %></td>
          <td><%= rental.bathrooms %></td>
          <td> <a href=<%= rental.website+rental.link %>>Consulter l'annonce sur <%= rental.website[8..-1] %></a></td>
          
          <td><%= rental.last_update %></td>
          <td><%= link_to 'Show', rental %></td>
          <td><%= link_to 'Edit', edit_rental_path(rental) %></td>
          <td><%= link_to 'Destroy', rental, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Ajouter une annonce', new_rental_path %>
</div>
