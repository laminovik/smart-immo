<p id="notice"><%= notice %></p>

<h1>Listing Rentals</h1>

<table>
  <thead>
    <tr>
      <th>City</th>
      <th>District</th>
      <th>Type</th>
      <th>Price</th>
      <th>Surface</th>
      <th>Sqm price</th>
      <th>Rooms</th>
      <th>Bathrooms</th>
      <th>Website</th>
      <th>Link</th>
      <th>Last update</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
      <tr>
        <td><%= rental.city %></td>
        <td><%= rental.district %></td>
        <td><%= rental.type %></td>
        <td><%= rental.price %></td>
        <td><%= rental.surface %></td>
        <td><%= rental.sqm_price %></td>
        <td><%= rental.rooms %></td>
        <td><%= rental.bathrooms %></td>
        <td><%= rental.website %></td>
        <td><%= rental.link %></td>
        <td><%= rental.last_update %></td>
        <td><%= link_to 'Show', rental %></td>
        <td><%= link_to 'Edit', edit_rental_path(rental) %></td>
        <td><%= link_to 'Destroy', rental, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rental', new_rental_path %>
